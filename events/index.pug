script#event-template(type='text/x-handlebars-template').
  <div class="single-event-box {{isActive 'active-event-box' 'inactive-event-box'}}">
  <div class="event-box-text">
  <div class="event-box-title">
  <span>{{name}}</span>
  </div>
  <div class="event-box-shortDescription">
  <span>{{{shortDescription}}}</span>
  </div>
  <div class="event-box-icaos">
  <span>
  <span>{{formatTime startTime}} - {{formatTime endTime}}</span>
  <span class="event-box-icaos-single"><b>{{#each airports}}{{icao}}{{#unless @last}},
  {{/unless}}{{/each}}</b></span>
  </span>
  </div>
  </div>
  </div>
script#precise-popup-template(type='text/x-handlebars-template').
  <div class="precise-content-main-text">
  <h2>{{eventTitle}}</h2>
  <p>{{eventLink}}</p>
  <p>{{eventDate}}</p>
  </div>
  <div class="precise-popup-content-inline">
  <img src="{{eventLink}}" alt="Event Image" />
  <div class="precise-popup-description">
  <h3>Description</h3>
  <p>{{eventDescription}}</p>
  </div>
  </div>
  <div class="related-events">
  <h4>Related Events</h4>
  <ul>
